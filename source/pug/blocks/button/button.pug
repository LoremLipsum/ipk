mixin button(data)
    +el({
        tag: data.tag ? data.tag : 'button',
        class: 'button',
        mod: data.mod,
        mix: data.mix,
        js: data.js,
        type: data.type,
        text: data.text,
        before: data.before,
        after: data.after,
        target: data.target,
        href: data.href,
    })&attributes(attributes)
        if data.icon
            +el({
                tag: 'svg',
                icon: data.icon,
                class: 'button__icon'
            })
