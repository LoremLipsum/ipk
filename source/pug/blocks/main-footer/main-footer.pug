mixin main-footer(data)
    +el({
        tag: 'footer',
        class: 'main-footer',
        mix: data.mix,
        mod: data.mod,
        js: data.js,
    })&attributes(attributes)
        .main-footer__main
            .main-footer__inner
                +el({
                    tag: 'ul',
                    class: 'main-footer__nav-list',
                })(role='navigation' aria-label='Дополнительное меню' itemscope itemtype='http://schema.org/SiteNavigationElement')
                    each item, index in ['Главная', 'Обо мне', 'Установка БКТП', 'Реконструкция ГРЩ', 'Прокладка линий НН И ВН', 'Контакты']
                        +el({
                            tag: 'li',
                            class: 'main-footer__nav-item',
                            mix: index == 0 ? 'active' : ''
                        })(itemprop='name')
                            +el({
                                tag: 'a',
                                text: item,
                                class: 'main-footer__nav-link',
                            })(itemprop='url')
                +el({
                    tag: 'ul',
                    class: 'main-footer__contacts-list',
                })
                    li.main-footer__contacts-item
                        +el({
                            tag: 'a',
                            href: 'tel:+74954545555',
                            class: 'main-footer__contacts-link',
                            mod: 'tel',
                            text: 'Тел: +7(495) 454 5555'
                        })
                    li.main-footer__contacts-item
                        +el({
                            tag: 'a',
                            href: 'mailto:mail@gmail.com',
                            class: 'main-footer__contacts-link',
                            mod: 'email',
                            text: 'Email: mail@gmail.com'
                        })
        .main-footer__bottom
            .main-footer__inner
                div.main-footer__copyright &copy;&nbsp;2019 allright.ru. Все права защищены
